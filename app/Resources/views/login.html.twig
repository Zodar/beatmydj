{# src/OC/UserBundle/Resources/views/Security/login.html.twig #}


{% block body %}

<h4 style="text-align:center;"> Connexion </h4>

<div class="row">
	<div class="col-md-3 login_option">
		<button type="text" class="btn btn-sm btn-success" data-toggle="modal" data-target="#inscription_modal">
			Je ne possède pas de compte
		</button>
	</div>
	<div class="col-md-1 hidden-sm hidden-xs login_option">
		<hr id="hrLogin">
	</div>
	  <div class="alert alert-warning">
    <strong>Attention ! </strong>Le formulaire de cet page n'est pas sécurisé, il est vivement recommandé le formulaire sécurisé pour accéder à votre compte.
  </div>
	<div class="col-md-12 col-md-offset-3 login_option">
	  {# S'il y a une erreur, on l'affiche dans un joli cadre #}
	  {% if error %}
	    <div class="alert alert-danger">{{ error.message }}</div>
	  {% endif %}
	
	  <form action="{{ path('login') }}" method="post">    
	    <div>
	    	<label for="username">Login :</label>
	    	<input type="text" id="username" name="_username" value="{{ last_username }}" class="inscription_input"/>
		</div>	
		<div>
		    <label for="password">Mot de passe :</label>
		    <input type="password" id="password" name="_password" class="inscription_input"/>
	    </div>
	    
	    <input type="submit" value="Connexion" class="btn btn-sm btn-primary" />
	  </form>
	</div>
</div>

{% endblock %}