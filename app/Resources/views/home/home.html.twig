{% extends 'base.html.twig' %}

{% block body %}



<body>
</body>

	<!-- BALISE SOUNDCLOOD -->
	<div id="play_sound"> </div>

	<div class="row">
	    <div class="col-md-7">
            <h4>DJ A la une</h4>
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
				  <!-- Indicators -->
				  <ol class="carousel-indicators">
				    {% if firstUser != null %}
						<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
			      	{%endif%}
				  	{% if lastUser != null %}
						<li data-target="#myCarousel" data-slide-to="1"></li>
					{%endif%}
				  	{% if randomUser != null %}
					    <li data-target="#myCarousel" data-slide-to="2"></li>
				    {%endif%}
				  </ol>

				  <!-- Wrapper for slides -->
				  <div class="carousel-inner" role="listbox">
					    {% if firstUser != null %}			  		
						    <div class="item active">
						      	<img src="{{asset('uploads/dj_photos/')}}{{firstUser['path']}}" alt="{{firstUser['userName'] | capitalize }}" />
						      	<div class="carousel-caption">
						          <h3>DJ à la une: {{firstUser['userName'] | capitalize }}</h3>
						          <p>{{firstUser['presentation']}}</p>
						        </div>
						    </div>
				      	{%endif%}

					  	{% if lastUser != null %}
						    <div class="item">
						      	<img src="{{asset('uploads/dj_photos/')}}{{lastUser['path']}}" alt="{{lastUser['userName'] | capitalize }}" />
						      	<div class="carousel-caption">
						          <h3>Dernier DJ inscrit: {{lastUser['userName'] | capitalize }}</h3>
						          <p>{{lastUser['presentation']}}</p>
						        </div>
						    </div>
				      	{%endif%}
					
						{% if randomUser != null %}
						     <div class="item">
						      	<img src="{{asset('uploads/dj_photos/')}}{{randomUser['path']}}" alt="{{randomUser['userName'] | capitalize }}" />
						      	<div class="carousel-caption">
						          <h3>DJ aléatoire: {{randomUser['userName'] | capitalize }}</h3>
						          <p>{{randomUser['presentation']}}</p>
						        </div>
						    </div>
					    {%endif%}
				  </div>
				
				  <!-- Left and right controls -->
				  <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
				    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
				    <span class="sr-only">Previous</span>
				  </a>
				  <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
				    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
				    <span class="sr-only">Next</span>
				  </a>
	        </div>
	    </div>
	    <div class="col-md-5">
	        <h4>Soirée dans votre région</h4>
            <div id="googleMap" style="width: 100%; height: 400px;"></div>
	    </div>
	</div>
{% endblock %}

{% block javascripts %}
	<script src="{{asset('js/soundclood_accueil.js')}}"></script>
	<script src="{{asset('js/map_evenements.js')}}"></script>	
	<script src="{{asset('js/map_home.js')}}"></script>
{% endblock %}
