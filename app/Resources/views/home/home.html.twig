	{% extends 'base.html.twig' %}

	{% block body %}

  <!-- START THE FEATURETTES -->
<div class=" featurette">
	<!-- BALISE SOUNDCLOOD -->
      		 <div class="col-md-10 col-md-offset-1" id="play_sound"> </div>
</div>
    <hr class="featurette-divider">


<div class="row featurette bluebkg"> 
		<h2 class="">Nos DJs
</h2>
	<div class="col-md-6">  
  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">

      {% if lastUser %}
        <div class="item active">
          <img src="{{asset('uploads/dj_photos/')}}{{lastUser.path}}">
          <div class="carousel-caption">
            <h3>{{lastUser.userName}}</h3>
            <p>{{lastUser.presentation}}</p>
          </div>
        </div>
      {% endif %}

      {% if randomUser %}
        <div class="item">
          <img src="{{asset('uploads/dj_photos/')}}{{randomUser.path}}">
          <div class="carousel-caption">
            <h3>{{randomUser.userName}}</h3>
            <p>{{randomUser.presentation}}</p>
          </div>
        </div>
      {% endif %}    

      {% if firstUser %}
      <div class="item">
        <img src="{{asset('uploads/dj_photos/')}}{{firstUser.path}}">
        <div class="carousel-caption">
          <h3>{{firstUser.userName}}</h3>
          <p>{{firstUser.presentation}}</p>
        </div>
      </div>
      {% endif %}
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
	</div>
	<div class="col-md-6">
		<div class="centerText">
				<p class="HomelistDJ">{{lastUser.userName}}</p>
			<br/>
			<br/>
			<a class="HomelistDJ center">Plus de DJ</a>
		</div>	
	</div>
</div>

<div class="row featurette">

<div class="col-md-6">
  <img class="featurette-image img-responsive center-block" src="{{asset('images/disque.png')}}" style="opacity: 0.5;">
</div>
	<div class="col-md-6">
		<h4 class="col-md-6 col-md-offset-1">Soirée dans votre région</h4>
		<div id="googleMap" class="col-md-10 col-md-offset-1" style="height: 400px;"></div>
	</div>     
</div>

{% endblock %}

{% block javascripts %}
	<script src="{{asset('js/soundclood_accueil.js')}}"></script>
	<script src="{{asset('js/map_evenements.js')}}"></script>	
	<script src="{{asset('js/map_home.js')}}"></script>
{% endblock %}