{# src/OC/UserBundle/Resources/views/Security/login.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}

	<h4 style="text-align:center;" class="titleBMD"> Connexion </h4>
	<div class="row">
		<div class="col-md-3 login_option">
			<h3>Je ne possède pas de compte</h3>
			<button type="text" class="MainButtonBMD buttonBlue" data-toggle="modal" data-target="#inscription_modal">
				S'inscrire
			</button>
		</div>
		<div class="col-md-1 hidden-sm hidden-xs login_option">
			<hr id="hrLogin">
		</div>
		<div class="col-md-3 col-md-offset-1  login_option">
		{# S'il y a une erreur, on l'affiche dans un joli cadre #}
		{% if error %}
			<div class="alert alert-danger">{{ error.message }}</div>
		{% endif %}

		{# Le formulaire, avec URL de soumission vers la route « login_check » comme on l'a vu #}
 <form action="{{ path('login') }}" method="post" width="500">     
                 <div class="form-group col-md-12 col-md-offset-3">
                  <label class="labelBMD" for="username"><i class="fa fa-user" aria-hidden="true"></i></label>
                  <input type="text"  placeholder="Login" id="username" name="_username" class=" inputBMD"/>
                </div>    
                 <div class="form-group col-md-12 col-md-offset-3">
                  <label for="password" class="labelBMD"><i class="fa fa-lock" aria-hidden="true"></i></label>
                  <input type="password" id="password"  placeholder="Mot de passe" name="_password" class=" inputBMD"/>
                </div>
                <div class="form-group col-md-12 col-md-offset-3">
                  <input type="submit" value="Connexion" class="MainButtonBMD buttonBlue" />
                </div>
              </form>
		</div>
	</div>

{% endblock %}